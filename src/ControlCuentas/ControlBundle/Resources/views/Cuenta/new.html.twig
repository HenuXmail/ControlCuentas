        <br />
        <label for="">Monto</label>
        <input type="number" name="cuota_monto" id="cuota_monto" />
        
        
        <p>
            <button type="submit">Create</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('cuenta') }}">
            Back to the list
        </a>
    </li>
</ul>
{% endblock %}
