{% extends '::base.html.twig' %}

{% block body -%}

    <form action="{{ path('cuenta_create') }}" method="post" {{ form_enctype(form) }}>
        {{ form_widget(form) }}
        
        <label for="">Número de Cuotas</label>
        <input type="number" name="cant_cuotas" id="cant_cuotas" />
        <br />
        <label for="">Primera Cuota</label>
        <input type="date" name="primer_vencimiento" id="primer_vencimiento" />
