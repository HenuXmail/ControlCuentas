{% extends '::base.html.twig' %} {% block titulo %} Detalle de cuenta {%
endblock %} {% block body -%}
		<div class="widget">
		
			<div class="widget-head">
				<div class="pull-left">Estadísticas</div>
				<div class="widget-icons pull-right">
					<a href="#" class="wminimize"><i class="fa fa-chevron-up"></i></a>
				</div>
				<div class="clearfix"></div>
			</div>
		
			<div class="widget-content">
				<div class="row">
					<div class="col-lg-6">
						<ul class="activity">
			            	<li>
			                	<i class="fa fa-money"></i>Has Pagado <strong>${{ estadisticas.total_pagado }}</strong> a la fecha.
			                </li>
			            </ul>
					</div>
					<div class="col-lg-6 text-center">
						<div class="padd">
						<div class="easychart clearfix">
								
						<div class="chart">
							<div class="percentage" data-percent="{{ estadisticas.cuotas_pagadas }}">
								<span class="percent">{{ estadisticas.cuotas_pagadas }}</span>
							</div>
							<div class="label">Total de Cuotas</div>
						</div>
								
						</div>
					</div>
					</div>
				</div>
				
			</div>
		</div>
{% for key,periodos in cuotas %}
<div class="panel panel-default">
	<div class="panel-heading">
		Cuotas pertenecientes al año <b>{{ key }}</b>
	</div>
	<div class="panel-body">

		{% for periodo in periodos %}
		<div class="well well-sm col-lg-2 col-md-3 col-sm-4 col-xs-6">
			<div class="">
				<div class="text-center">{{ periodo.fechaVencimiento|date('d') }} de
					{{ periodo.fechaVencimiento|date('F') }}</div>
				<div class="">
					<a href="{{ path('cuota_show',{ id: periodo.id }) }}"
						class="btn btn-default btn-block btn-xs">Ver Detalles</a> {% if
					periodo.fechaPago is null %} <a
						href="{{ path('cuota_ingresar_pago',{ id: periodo.id }) }}"
						class="btn btn-primary btn-block btn-xs">Pagar</a> {% else %}
					<button class="btn btn-default btn-block btn-xs disabled">Pagada</button>
					{% endif %}
				</div>
			</div>
		</div>
		{% endfor %}
	</div>
</div>
{% endfor %}
<a href="{{ path('cuenta') }}" class="btn btn-primary"> Regresar a la listat </a>
<a href="{{ path('cuenta_edit', { 'slug': entity.slug }) }}" class="btn btn-default"> Editar </a>
<form action="{{ path('cuenta_delete', { 'slug': entity.slug }) }}"	method="post">
	<input type="hidden" name="_method" value="DELETE" /> 
	{{	form_widget(delete_form) }}
	<button type="submit" class="btn btn-danger">Eliminar</button>
</form>

{% endblock %}

{% block stylesheets %}
<!-- jQuery Easypiechart stylesheet -->
<link href="{{ asset('style/jquery.easy-pie-chart.css') }}" rel="stylesheet">   
{% endblock %}

{% block javascripts %}
 <script src="{{ asset('js/jquery.easypiechart.min.js') }}"></script> <!-- jQuery Easy Pie Chart -->
 
 <script>
 $( document ).ready(function() {
	 $('.percentage').easyPieChart({
	    	animate: 2000
    });
});
 </script>
{% endblock %}
