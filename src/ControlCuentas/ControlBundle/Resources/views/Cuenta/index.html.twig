{% extends '::base.html.twig' %}

{% block titulo %}
Lista de Cuentas registradas
{% endblock %}

{% block body -%}
<div class="row">
{% for entity in entities %}
        {% set iconTipoCuenta = 'calendar' %}
        {% if entity.tipocuenta.id == 2 %}{% set iconTipoCuenta = 'refresh' %}{% endif %}
       
        <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
        	<div class="widget-container fluid-height">
              <div class="heading">
                <i class="fa fa-{{ iconTipoCuenta }} pull-left" data-toggle="tooltip" title="{{ entity.tipocuenta.descripcion }}"></i>
                {{ entity.nombre|truncate(15)}} 
                <span class="label label-primary pull-right">{{ entity.cuotas|length() }}</span>
              </div>
              <div class="widget-content padded">
               	<div class="progress progress-striped active">
	                <div class="progress-bar" style="width: 50%"></div>
                </div>
                
                <p class="text-info">{{ entity.descripcion }}</p>
              	
              	<a href="{{ path('cuenta_show',{slug:entity.slug} ) }}" class="btn btn-primary-outline btn-xs btn-block">Ver detalle</a>
              </div>
            </div>
        </div>
{% endfor %}
</div>

{% endblock %}
